<!DOCTYPE html>

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fotoon | Account</title>
    <link rel="shortcut icon" type="image/x-icon" href="/img/favicon.ico" />

    <!--Stylesheets-->
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/account/style.css">

    <!--Scripts-->
    <script src="/js/general/navbar.js"></script>
    <script src="/js/user/userScripts.js"></script>
    <script src="/js/search/search.js"></script>
</head>

<body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="navbar-brand" id="logo">
            <a class="navbar-item" href="/">
                <img src="/img/logo-big.jpg" width="30" height="30">
                <p class="is-size-4 ml-2"><strong>Fotoon</strong></p>
            </a>

            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false"
                data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu">
            <div class="navbar-start">
                <a class="navbar-item">
                    Search
                </a>

                <a class="navbar-item" href="/newpost">
                    Create a Post
                </a>
            </div>

            <div class="navbar-end">
                <div class="navbar-item has-dropdown is-hoverable">
                    <a class="navbar-link">

                        <%= user.username %>
                    </a>

                    <div class="navbar-dropdown">
                        <a class="navbar-item" href="/post">
                            Posts
                        </a>

                        <a class="navbar-item" href="/profile">
                            Profile
                        </a>

                        <a class="navbar-item" href="/account">
                            Account
                        </a>

                        <hr class="navbar-divider">

                        <a class="navbar-item" onclick="logout()">
                            Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div class="field has-addons">
        <div class="control">
            <input class="input" type="text" placeholder="Search a username">
        </div>
        <div class="control">
            <a class="button is-info" onclick="search()">
                Search
            </a>
        </div>
    </div>

    

</body>