<!DOCTYPE html>

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fotoon | Account</title>
    <link rel="shortcut icon" type="image/x-icon" href="/img/favicon.ico" />

    <!--Stylesheets-->
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/account/style.css">

    <!--Scripts-->
    <script src="/js/general/navbar.js"></script>
    <script src="/js/user/userScripts.js"></script>
    <script src="/js/account/account.js"></script>
</head>

<body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="navbar-brand" id="logo">
            <a class="navbar-item" href="/">
                <img src="/img/logo-big.jpg" width="30" height="30">
                <p class="is-size-4 ml-2"><strong>Fotoon</strong></p>
            </a>

            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false"
                data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu">
            <div class="navbar-start">
                <a class="navbar-item" href="/search">
                    Search
                </a>

                <a class="navbar-item" href="/newpost">
                    Create a Post
                </a>
            </div>

            <div class="navbar-end">
                <div class="navbar-item has-dropdown is-hoverable">
                    <a class="navbar-link">

                        <%= user.username %>
                    </a>

                    <div class="navbar-dropdown">
                        <a class="navbar-item" href="/post">
                            Posts
                        </a>

                        <a class="navbar-item" href="/profile">
                            Profile
                        </a>

                        <a class="navbar-item" href="/account">
                            Account
                        </a>

                        <hr class="navbar-divider">

                        <a class="navbar-item" onclick="logout()">
                            Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </nav>


    <div class="center-card">
        <div class="card">
            <div class="card-content">
                <div class="field">
                    <p class="help is-info">Username</p>
                    <p class="control has-icons-left">
                        <input id="captionInput" class="input" type="text" placeholder="<%= user.username%>" disabled>
                        <span class="icon is-small is-left">
                            <i class="fas fa-user"></i>
                        </span>
                    </p>

                </div>
                <div class="field">
                    <p class="help is-info">Short Bio</p>
                    <p class="control has-icons-left">
                        <input id="shortBioInput" class="input" type="text" placeholder="<%= user.shortBio%>">
                        <span class="icon is-small is-left">
                            <i class="fas fa-paragraph"></i>
                        </span>
                    </p>

                </div>
                <div class="field">
                    <p class="help is-info">Long Bio</p>
                    <p class="control has-icons-left">
                        <input id="longBioInput" class="input" type="text" placeholder="<%= user.longBio%>">
                        <span class="icon is-small is-left">
                            <i class="fas fa-paragraph"></i>
                        </span>
                    </p>
                </div>
                <div class="field">
                    <p class="help is-info">Avatar</p>
                    <p class="control has-icons-left">
                    <div class="file">
                        <label class="file-label">
                            <input class="file-input" type="file" name="resume" id="fileInput" accept="image/*">
                            <span class="file-cta">
                                <span class="file-icon">
                                    <i class="fas fa-upload"></i>
                                </span>
                                <span class="file-label">
                                    Upload an Avatarâ€¦
                                </span>
                            </span>
                        </label>
                    </div>
                    </p>
                </div>
                <div class="field">
                    <p class="control">
                        <button id="submitButton" class="button is-success" onclick="submit()">
                            Change
                        </button>

                        <a href="/change-password">
                            <p class="help is-primary">Change Password</p>
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</body>